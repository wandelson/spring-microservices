package br.com.institutointegra.api.service.impl;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import br.com.institutointegra.api.model.Client;
import br.com.institutointegra.api.repository.ClientRepository;
import br.com.institutointegra.api.service.PersonService;

@Service
public class PersonServiceImpl implements PersonService {

	@Autowired
	private ClientRepository personRepository;
	
	@Override
	public List<Client> getAll() {
		return this.personRepository.findAll();
	}

	@Override
	public Client save(Client p) {
		return this.personRepository.save(p);
	}

	@Override
	public Client findById(Long id) {
		return this.personRepository.findById(id).orElse(null);
	}

	@Override
	public void delete(Long id) {
		this.personRepository.deleteById(id);
	}

}
